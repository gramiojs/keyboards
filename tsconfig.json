{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleDetection": "force",

		/* Bundler mode */
		"moduleResolution": "NodeNext",
		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src", "tests"]
}
